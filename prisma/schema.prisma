model PersonalBest{
  id        String   @id @default(uuid())
  exerciseTitle  String
  weight    Int
  color     String @default("boxDarkPink")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  record    User @relation(fields: [recordId], references: [id])
  recordId  String
  
  @@index([recordId])

}
